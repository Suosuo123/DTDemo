<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_gray">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="20dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/tv_order_no"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="订单号："
                    android:textColor="#787878"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/tv_order_no"
                    android:text="2018000000001"
                    android:textColor="#787878"
                    android:textSize="14sp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/tv_order_total"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="订单合计："
                    android:textColor="#787878"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/tv_order_total"
                    android:text="¥10000.00"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/tv_order_deposit"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="定金："
                    android:textColor="#787878"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/et_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/tv_order_deposit"
                    android:background="@null"
                    android:cursorVisible="true"
                    android:drawableBottom="@drawable/line1"
                    android:drawablePadding="5dp"
                    android:hint="¥ 请填写"
                    android:imeOptions="actionDone"
                    android:inputType="numberDecimal"
                    android:maxLines="1"
                    android:textColor="@color/red1"
                    android:textColorHint="#D4D4D4"
                    android:textCursorDrawable="@drawable/test_cursor"
                    android:textSize="18sp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/tv_order_balance"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="余额："
                    android:textColor="#787878"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/tv_order_balance"
                    android:text="¥10000.00"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_date_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/main_gray"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="20dp"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/tv_order_balance"
                android:drawableLeft="@mipmap/icon_calendar"
                android:drawablePadding="10dp"
                android:text="尾款支付"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/ll_date1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_date_1_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableBottom="@drawable/line1"
                    android:drawablePadding="5dp"
                    android:gravity="center"
                    android:text="2018年"
                    android:textColor="#3B3C3F"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_date_1_2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:drawableBottom="@drawable/line1"
                    android:drawablePadding="5dp"
                    android:gravity="center"
                    android:text="02月"
                    android:textColor="#3B3C3F"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_date_1_3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableBottom="@drawable/line1"
                    android:drawablePadding="5dp"
                    android:gravity="center"
                    android:text="02日"
                    android:textColor="#3B3C3F"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/icon_calendar"
                    android:drawablePadding="10dp"
                    android:text="货物交付"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="+"
                    android:textColor="#3B3C3F"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_day_range"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:drawableBottom="@drawable/line1"
                    android:drawablePadding="5dp"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="#3B3C3F"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="天"
                    android:textColor="#3B3C3F"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_date2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_date_2_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableBottom="@drawable/line1"
                    android:drawablePadding="5dp"
                    android:gravity="center"
                    android:text="2018年"
                    android:textColor="#3B3C3F"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_date_2_2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:drawableBottom="@drawable/line1"
                    android:drawablePadding="5dp"
                    android:gravity="center"
                    android:text="02月"
                    android:textColor="#3B3C3F"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_date_2_3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableBottom="@drawable/line1"
                    android:drawablePadding="5dp"
                    android:gravity="center"
                    android:text="04日"
                    android:textColor="#3B3C3F"
                    android:textSize="14sp" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@mipmap/img_area_select_bg"
            android:orientation="vertical"
            android:paddingBottom="30dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="30dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/icon_address"
                android:drawablePadding="10dp"
                android:text="交付仓"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/ll_city_select"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_city1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableBottom="@drawable/line1"
                    android:drawablePadding="5dp"
                    android:drawableRight="@mipmap/icon_select_arrow"
                    android:text="北京市"
                    android:textColor="#387AD3"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_city2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_weight="1"
                    android:drawableBottom="@drawable/line1"
                    android:drawablePadding="5dp"
                    android:drawableRight="@mipmap/icon_select_arrow"
                    android:text="东城区"
                    android:textColor="#387AD3"
                    android:textSize="14sp" />

            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rel_share"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@mipmap/icon_share" />
        </RelativeLayout>

    </LinearLayout>
</ScrollView>