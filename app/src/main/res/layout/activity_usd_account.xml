<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_gray">

    <include
        android:id="@+id/rel_title"
        layout="@layout/layout_title_bar" />
    <RelativeLayout
        android:id="@+id/top_layout"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@mipmap/usd_account_1"
        android:layout_below="@+id/rel_title"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <TextView
            android:id="@+id/account_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#3B3C3F"
            android:textSize="35sp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="50dp"/>

        <ImageView
            android:id="@+id/btn_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/usd_account_2"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="15dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"/>

        <ImageView
            android:id="@+id/btn_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/usd_account_3"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="15dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>

    <ImageView
        android:id="@+id/time_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/usd_account_4"
        android:layout_below="@+id/top_layout"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/time_layout">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/click_img1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@mipmap/usd_account_6"/>
            <ImageView
                android:id="@+id/click_img2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@mipmap/usd_account_5"
                android:visibility="gone"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@mipmap/usd_account_7"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@mipmap/usd_account_7"/>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
